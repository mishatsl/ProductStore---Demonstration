@model Domain.Entites.HotDeal

@{
    ViewBag.Title = "Information";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<h2>HotDeal</h2>




<div class="box">
    <div class="box-header">
        <h3 class="box-title">@ViewBag.Title</h3>
    </div>
    <div class="box-body">
        @using (Html.BeginForm("HotDeal"))
        {         
                    <div class="form-group">
                        @Html.CheckBoxFor(m => m.IsHotDeal, new { @class = "form-control" })
                        <label>Activate Hot Deal</label>
                    </div>
                    <div class="form-group">
                        <label>Hot Deal Action start time</label>
                        <div class="row">
                            <div class="col-sm-1">
                                <label>Year:</label>
                                @Html.TextBoxFor(m => m.HotDealActionStartTime.Year,null, new { @class = "form-control" })
                            </div>
                            <div class="col-sm-1">
                                <label>Month:</label>
                                @Html.TextBoxFor(m => m.HotDealActionStartTime.Month, null, new { @class = "form-control" })
                            </div>
