                                <label>Day:</label>
                                @Html.TextBoxFor(m => m.HotDealActionStartTime.Day, null, new { @class = "form-control" })
                            </div>
                            <div class="col-sm-1">
                                <label>Hour:</label>
                                @Html.TextBoxFor(m => m.HotDealActionStartTime.Hour, null, new { @class = "form-control" })
                            </div>
                            <div class="col-sm-1">
                                <label>Minute:</label>
                                @Html.TextBoxFor(m => m.HotDealActionStartTime.Minute, null, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Hot Deal Action End time</label>
                        <div class="row">
                            <div class="col-sm-1">
                                <label>Year:</label>
                                @Html.TextBoxFor(m => m.HotDealActionEndTime.Year, null, new { @class = "form-control" })
                            </div>
                            <div class="col-sm-1">
                                <label>Month:</label>
                                @Html.TextBoxFor(m => m.HotDealActionEndTime.Month, null, new { @class = "form-control" })
                            </div>
                            <div class="col-sm-1">
                                <label>Day:</label>
                                @Html.TextBoxFor(m => m.HotDealActionEndTime.Day, null, new { @class = "form-control" })
                            </div>
                            <div class="col-sm-1">
                                <label>Hour:</label>
                                @Html.TextBoxFor(m => m.HotDealActionEndTime.Hour, null, new { @class = "form-control" })
                            </div>
                            <div class="col-sm-1">
                                <label>Minute:</label>
                                @Html.TextBoxFor(m => m.HotDealActionEndTime.Minute, null, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
