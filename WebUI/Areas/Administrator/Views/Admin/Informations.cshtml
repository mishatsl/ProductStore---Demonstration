
@{
    ViewBag.Title = "Information";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

@model Domain.Entites.Information

    <h1>@Model.Head</h1>

<div class="row">
    <div class="col-md-12">
        <!-- Custom Tabs -->
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#tab_1" data-toggle="tab" aria-expanded="true">Text</a></li>
                <li class=""><a href="#tab_2" data-toggle="tab" aria-expanded="false">HTML</a></li>

                <li class="pull-right"><a href="#" class="text-muted"><i class="fa fa-gear"></i></a></li>
            </ul>
            <div class="tab-content">
                
                <div class="tab-pane active" id="tab_1">
                    @using (Html.BeginForm("Informations"))
                    {
                        @Html.HiddenFor(m => m.Id)
                        @Html.HiddenFor(m => m.Head)
                        @Html.TextAreaFor(m => m.HTMLContent, new { id = "tinyMCE" })
                        <input type="submit" value="Save">
                    }
                    </div>
                <!-- /.tab-pane -->
                <div class="tab-pane" id="tab_2">
                    @using (Html.BeginForm("Informations"))
                    {
                        @Html.HiddenFor(m => m.Id)
                        @Html.HiddenFor(m => m.Head)
                        @Html.TextAreaFor(m => m.HTMLContent, new { @class = "form-control" })
                        <input type="submit" value="Save">
                    }
                </div>
            </div>
            <!-- /.tab-content -->
        </div>
        <!-- nav-tabs-custom -->
    </div>

</div>

