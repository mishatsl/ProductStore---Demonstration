@model Domain.Entites.Book

<div class="well">
    <div class="row">
        <div class="col-xs-9">
            @if (Model.ImageData!=null)
            {
                <div class="pull-left" style="margin-right:10px;">
                    <img src="@Url.Action("GetImage","Books", new { Model.BookID})" width="75" height="75"alt="Alternate Text" />
                </div>
            }
            <h3>
                <strong>@Model.Name</strong>
            </h3>           
            <h4>
                <strong>@Model.Author</strong>
            </h4>
           </div>
            <div class="col-xs-3">
                <h3 class="price-margin row">
                    <strong class="pull-right label label-primary">@Model.Price.ToString("# руб")</strong>
                </h3>
                @using (Html.BeginForm("AddToCart", "Cart"))
                {
                        <div  class=" rs-margin pull-right row">
                            @Html.HiddenFor(x => x.BookID)
                            @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                            <input type="submit" class="btn btn-success" value="В корзину" />
                        </div>
                 }
            </div>
        </div>
    <div>
        <span class="lead">@Model.Description</span>
    </div>
</div>


