@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Domain.Entites.Product

@section breadcrumb
{
    <div id="breadcrumb" class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <div class="col-md-12">
                    <ul class="breadcrumb-tree">
                        <li>
                            @Html.RouteLink("Home", new
                                       {
                                           Controller = "Product",
                                           Action = "Index"
                                       })
                        </li>
                        <li>
                            @Html.RouteLink("All Categories", new
                               {
                                   Controller = "Product",
                                   Action = "Store",
                                   page = 1
                               })
                        </li>
                        <li>
                            @Html.RouteLink(Model.Сategory, new
                                   {
                                       Controller = "Product",
                                       Action = "Store",
                                       param = Model.Сategory,
                                       page = 1
                                   })
                        </li>
                        <li class="active">@Model.Name</li>
                    </ul>
                </div>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
}
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- Product main img -->
            <div class="col-md-5 col-md-push-2">
                <div id="product-main-img">
                    @foreach (Domain.Entites.ImagesWithResolutions image in Model.ImagesWithResolutions)
                    {
                        <div class="product-preview">
                            <img src="@Url.Action("GetImage","Product", new { Model.ProductID,imageId = image.ImagesWithResolutionsID, width = 600, height = 600})" alt="">
                        </div>
                    }
                </div>
            </div>
            <!-- /Product main img -->
            
            <!-- Product thumb imgs -->
            <div class="col-md-2  col-md-pull-5">
                <div id="product-imgs">
                    @foreach (Domain.Entites.ImagesWithResolutions image in Model.ImagesWithResolutions)
                    {
                        <div class="product-preview">
                            <img src="@Url.Action("GetImage","Product", new { Model.ProductID,imageId = image.ImagesWithResolutionsID, width = 263, height = 263})" alt="">
                        </div>
                    }
                </div>
            </div>
            <!-- /Product thumb imgs -->
            
            <!-- Product details -->
            <div class="col-md-5">
                <div class="product-details">
                    <h2 class="product-name">@Model.Name</h2>
                    <div>
                        <div class="product-rating">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Model.ProductRating)
                                {
                                    <i class="fa fa-star"></i>
                                }
                                else
                                {
                                    <i class="fa fa-star-o"></i>
                                }
                            }
                        </div>
                        <a class="review-link" href="#">@Model.Reviews.Count().ToString() Review(s) | Add your review</a>
                    </div>
                    <div>
                        <h3 class="product-price">$@Model.Price<del class="product-old-price">$@Model.PreviousPrice</del></h3>
                        @if (Model.InStock)
                        {
                            <span class="product-available">In Stock</span>
                        }
                    </div>
                    <p>@Model.Description</p>
                    <div class="product-options">
                        <label>
                            Size
                            <select class="input-select">
                                <option value="0">X</option>
                            </select>
                        </label>
                        <label>
                            Color
                            <select class="input-select">
                                <option value="0">@Model.Color</option>
                            </select>
                        </label>
                    </div>

                    <div class="add-to-cart">
                        <div class="qty-label">
                            Qty
                            <div class="input-number">
                                <input type="number">
                                <span class="qty-up">+</span>
                                <span class="qty-down">-</span>
                            </div>
                        </div>
                        @using (Html.BeginForm("AddToCart", "Cart"))
                        {
                                @Html.HiddenFor(p => p.ProductID)
                                @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                                <button type="submit" class="add-to-cart-btn" value="submit"><i class="fa fa-shopping-cart"></i> add to cart</button>
                        }
                        @*<button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> add to cart</button>*@
                    </div>

                    <ul class="product-btns">
                        <li><a href="#"><i class="fa fa-heart-o"></i> add to wishlist</a></li>
                        <li><a href="#"><i class="fa fa-exchange"></i> add to compare</a></li>
                    </ul>

                    <ul class="product-links">
                        <li>Category:</li>
                        <li><a href="#">Headphones</a></li>
                        <li><a href="#">Accessories</a></li>
                    </ul>

                    <ul class="product-links">
                        <li>Share:</li>
                        <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                        <li><a href="#"><i class="fa fa-envelope"></i></a></li>
                    </ul>

                </div>
            </div>
            <!-- /Product details -->
            <!-- Product tab -->
            <div class="col-md-12">
                <div id="product-tab">
                    <!-- product tab nav -->
                    <ul class="tab-nav">
                        <li class="active"><a data-toggle="tab" href="#tab1">Description</a></li>
                        <li class=""><a data-toggle="tab" href="#tab2">Details</a></li>
                        <li class=""><a data-toggle="tab" href="#tab3">Reviews (@Model.Reviews.Count())</a></li>
                    </ul>
                    <!-- /product tab nav -->
                    <!-- product tab nav -->
                    @*<ul class="tab-nav">
                        <li class="active"><a data-toggle="tab" href="#tab1">Description</a></li>
                        <li><a data-toggle="tab" href="#tab2">Details</a></li>
                        <li><a data-toggle="tab" href="#tab3">Reviews (3)</a></li>
                    </ul>*@
                    <!-- /product tab nav -->
                    <!-- product tab content -->
                    <div class="tab-content">
                        <!-- tab1  -->
                        <div id="tab1" class="tab-pane fade">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>@Model.Description</p>
                                </div>
                            </div>
                        </div>
                        <!-- /tab1  -->
                        <!-- tab2  -->
                        <div id="tab2" class="tab-pane fade">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>@Model.Description</p>
                                </div>
                            </div>
                        </div>
                        <!-- /tab2  -->
                        <!-- tab3  -->
                        @Html.Partial("_ReviewsArea", Model.Reviews)


                        <!-- /tab3  -->
                    </div>
                    <!-- /product tab content  -->
                </div>
            </div>
            <!-- /product tab -->
        </div>
        
    </div>
    <!-- /row -->
</div>
<!-- /container -->
</div>

