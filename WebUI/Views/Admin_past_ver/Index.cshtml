@model IEnumerable<Domain.Entites.Book>

@{
    ViewBag.Title = "Админпанель панель: список книжок";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Список книг</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th class="text-right">
                    ID
                </th>
                <th>
                    Название
                </th>
                <th>
                    Автор
                </th>
                <th>
                    Жанр
                </th>
                <th class="text-right">
                    Цена
                </th>
                <th class="text-center">
                    Действие
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookID)
                    </td>
                    <td>
                        @Html.ActionLink(item.Name,"Edit",new { BookID  = item.BookID })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @item.Price.ToString("# руб")
                    </td>
                    <td>
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("BookID",item.BookID)
                            <input type="submit" value="Удалить" class="btn btn-default btn-xs"/>
                        }

                    </td>
                </tr>
            }
          </table>
        </div>
    <div class="panel-footer">
        @Html.ActionLink("Добавить книгу","Create",null,new {@class = "btn btn-default"})
    </div>
</div>
       
        
    

   

    
